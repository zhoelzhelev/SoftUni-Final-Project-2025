<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Schedulefy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Schedulefy.styles.css" asp-append-version="true" />
</head>
<body>
    <header style="background-color: black;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: #a288b4;">Schedulefy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if(User.Identity!.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a style="color: #a288b4;" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a style="color: #a288b4;" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Events
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a style="color: #a288b4;" class="dropdown-item" href="@Url.Action("Index", "Event")">Upcoming Events</a>
                                    </li>
                                    <li>
                                        <a style="color: #a288b4;" class="dropdown-item" href="@Url.Action("Add", "Event")">Add Event</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a style="color: #a288b4;" class="nav-link" asp-area="" asp-controller="Going" asp-action="Goings">Going</a>
                            </li>
                            <li>
                                <a style="color: #a288b4;" class="nav-link" asp-area="" asp-controller="Ticket" asp-action="Index">Tickets</a>
                            </li>
                        }
                        else if (User.Identity!.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a style="color: #a288b4;" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a style="color: #a288b4;" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Events
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a style="color: #a288b4;" class="dropdown-item" href="@Url.Action("Index", "Event")">Upcoming Events</a>
                                    </li>
                                    <li>
                                        <a style="color: #a288b4;" class="dropdown-item" href="@Url.Action("Add", "Event")">Add Event</a>
                                    </li>
                                </ul>
                            </li>                           
                        }
                        else
                        {
                            <li class="nav-item">
                                <a style="color: #a288b4;" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a style="color: #a288b4;" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Events
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a style="color: #a288b4;" class="dropdown-item" href="@Url.Action("Index", "Event")">Upcoming Events</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Schedulefy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
