@using Schedulefy.ViewModels.Comments;
@model IEnumerable<ComentIndexViewModel>
@{
	ViewData["Title"] = "Comments";
}

<link rel="stylesheet" href="~/css/Comment/Index.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<div class="comemnts-for-event-title">
	<h2>@ViewData["Title"]</h2>
</div>

<div class="comments-for-event-coontainer">
	@if(Model.Count() > 0)
	{
		@foreach (var comment in Model)
		{
			<div class="comment-inner">
				<p class="comment-publishere">@comment.PublisherUserName</p>
				<p class="comment-content">@comment.Content</p>
			</div>
		}
	}
	
</div>

<div class="buttons-commeents-for-event">
	<button type="button" class="btn btn-warning d-flex justify-content-center align-items-center flex-fill mx-1" onclick="history.back()">
		<i class="fas fa-arrow-left"></i> Back
	</button>
	<a asp-controller="Comment" asp-action="Add" asp-route-id="@ViewData["EventId"]" class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1" style="background-color: green">
		<i class="fa-solid fa-comment"></i>Add A Comment
	</a>
</div>
